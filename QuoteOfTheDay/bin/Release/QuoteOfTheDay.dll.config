<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <!-- Values in this appSettings section could alternatively be added to the LaunchBox.exe.config or BigBox.exe.config file. -->
  <!-- Settings in this file FOR THIS PLUGIN will override identical settings specified in LaunchBox.exe.config or BigBox.exe.config -->
  <appSettings>
    <!-- QOTD_Type: Valid Values are "Verse", "Quote", "Local", or "Random" -->
    <add key="QOTD_Type" value="Local"/>
        
    <!-- Percentages should be between 50 and 100, 80 is default -->
    <add key="QuoteWidthPercentage" value="80"/>
    <add key="QuoteHeightPercentage" value="80"/>
    
    <!-- Opacity Percentage can be between 0 and 100 -->
    <add key="BackgroundOpacityPercentage" value="60"/>
    
    <add key="MinimumCharactersPerLine" value="20"/>
    <add key="MaxNumberOfLines" value="4"/>

    <!-- HexColor: Default color for the text of the quote represented in HTML color codes. Default is "#ff0000"-->
    <add key="FontHexColor" value="#ffffff"/>
    <add key="BackgroundHexColor" value="#333333"/>
    
    <!-- TransparancyAlphaValue: Valid values are 0 to 255. 0 = invisible, 255 = fully opaque -->
    <add key="TransparancyAlphaValue" value="255"/>
    
    
    <add key="SecondsToDisplayQuote" value="8.5"/>

    <add key="WindowNames" value="LaunchBox Games Database,LaunchBox Premium,LaunchBox Big Box"/>

  </appSettings>
</configuration>